<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/layout.css">
    <title>HrELP Dashboard</title>
    <link rel="shortcut icon" href="/images/HrELPlogominiLight.png" />
</head>
<body>
    <div class="container">
        <!-- Sidebar Section -->
        <aside>
            <div class="toggle">
                <div class="logo">
                    <img src="/images/HrELPlogominiLight.png" id="logo-img">
                    <h2><span class="danger">H</span>r<span class="danger">ELP</span></h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">
                        close
                    </span>
                </div>
            </div>

            <div class="sidebar">
                <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                    <span class="material-symbols-outlined">
                        home
                    </span>
                    <h3>Home</h3>
                </a>
                <a asp-controller="User" asp-action="Details" class="text-decoration-none">
                    <span class="material-symbols-outlined">
                        format_image_left
                    </span>
                    <h3>Profile Details</h3>
                </a>
                <a asp-controller="User" asp-action="Edit" class="text-decoration-none">
                    <span class="material-symbols-outlined">
                        edit_note
                    </span>
                    <h3>Edit Profile</h3>
                </a>
                @if (User.IsInRole("Manager"))
                {
                    <a asp-controller="Manager" asp-action="ListExpenseRequests" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            assignment_add
                        </span>
                        <h3>Expense Requests</h3>
                    </a>
                    <a asp-controller="Manager" asp-action="ListAdvanceRequests" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            assignment_add
                        </span>
                        <h3>Advance Requests</h3>
                    </a>
                    <a asp-controller="Manager" asp-action="ListLeaveRequests" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            assignment_add
                        </span>
                        <h3>Leave Requests</h3>
                    </a>
                    <a asp-controller="Manager" asp-action="AddPersonnel" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            person_add
                        </span>
                        <h3>Add Personnel</h3>
                    </a>
                    <a asp-controller="Manager" asp-action="GetEmployeeList" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            patient_list
                        </span>
                        <h3>List Personnels</h3>
                    </a>
                }
                @if (User.IsInRole("Personnel"))
                {
                    <a asp-controller="Personnel" asp-action="FileARequest" class="text-decoration-none">
                        <span class="material-symbols-outlined">
                            patient_list
                        </span>
                        <h3>File A Request</h3>
                    </a>
                }

                <a asp-controller="User" asp-action="Logout" class="text-decoration-none">
                    <span class="material-icons-sharp">
                        logout
                    </span>
                    <h3>Logout</h3>
                </a>
            </div>
        </aside>
        <!-- End of Sidebar Section -->
        <!-- Main Content -->
        <!-- End of Main Content -->
        <div class="main-panel border-1">
            @RenderBody()
        </div>
        <!-- Right Section -->
        <div class="right-section">
            <div class="nav">
                <button id="menu-btn">
                    <span class="material-icons-sharp">
                        menu
                    </span>
                </button>
                <div class="dark-mode" id="darkModeToggle">
                    <span class="material-icons-sharp active">
                        light_mode
                    </span>
                    <span class="material-icons-sharp">
                        dark_mode
                    </span>
                </div>
                @{
                    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                    var photo = HttpContextAccessor.HttpContext.Session.GetString("Photo");
                }
                <div class="profile">
                    <div class="info">
                        <p>Hey, <b>@userName</b></p>
                        <small class="text-muted">@userRole</small>
                    </div>
                    <div class="profile-photo" id="profilePhoto">
                        <img src="~/images/profilepic/@photo" alt="Profile Photo" />
                    </div>
                </div>
                <div class="dropdown-menu" id="profileDropdown">
                    <a class="dropdown-item" asp-controller="User" asp-action="Edit">
                        <i class="ti-settings text-primary"></i>
                        Edit Profile
                    </a>
                    <a asp-action="Logout" class="dropdown-item">
                        <i class="ti-power-off text-primary"></i>
                        Logout
                    </a>
                </div>
            </div>
            <!-- End of Nav -->
        </div>
    </div>
    <!-- main-panel ends -->
    <!-- page-body-wrapper ends -->
</body>

<script src="~/js/layout.js"></script>
<script src="~/js/get-employee-list.js"></script>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
