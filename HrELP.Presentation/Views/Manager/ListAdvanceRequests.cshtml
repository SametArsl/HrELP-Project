@model List<AdvanceRequest>

<body>
    <main>
        <div class="new-users text-center">
            <h2>Advance Requests</h2>
            <div class="user-list mt-4">
                <div class="user">
                    <ul class="nav nav-tabs mt-5" id="employeeTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active text-decoration-none" id="all-tab" data-toggle="tab" href="#all" role="tab" aria-controls="all" aria-selected="true">All Requests</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-decoration-none" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Pending Requests</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-decoration-none" id="approved-tab" data-toggle="tab" href="#approved" role="tab" aria-controls="approved" aria-selected="false">Approved Requests</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link text-decoration-none" id="refused-tab" data-toggle="tab" href="#refused" role="tab" aria-controls="refused" aria-selected="false">Refused Requests</a>
                        </li>
                    </ul>

                    <div class="tab-content" id="requestTabContent">
                        <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                            <!-- Tüm Çalışanlar tablosu burada -->
                            <table class="table table-bordered table-striped table-hover mt-5 text-center">
                                <!-- Tabloyu burada doldurun -->
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Owner</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Currency</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="AdvanceRequestDetails" asp-route-id="@request.Id" class="text-dark">
                                                    <span class="material-symbols-outlined">
                                                        quick_reference_all
                                                    </span>
                                                </a>
                                            </td>
                                            <td>@request.AppUser.FullName</td>
                                            <td>@request.RequestType.RequestName</td>
                                            <td>@request.CreateDate</td>
                                            <td>@request.RequestAmount</td>
                                            <td>@request.Currency</td>
                                            <td>
                                                @if (request.ApprovalStatus == HrELP.Domain.Entities.Enums.ApprovalStatus.Pending_Approval)
                                                {
                                                    <span class="material-symbols-outlined text-warning">
                                                        hourglass_top
                                                    </span>
                                                }
                                                else if (request.ApprovalStatus == HrELP.Domain.Entities.Enums.ApprovalStatus.Approved)
                                                {
                                                    <span class="material-symbols-outlined text-success">
                                                        check_circle
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="material-symbols-outlined text-danger">
                                                        cancel
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
                            <!-- Tüm Çalışanlar tablosu burada -->
                            <table class="table table-bordered table-striped table-hover mt-5 text-center">
                                <!-- Tabloyu burada doldurun -->
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Owner</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Currency</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        @if (request.ApprovalStatus == ApprovalStatus.Pending_Approval)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-action="AdvanceRequestDetails" asp-route-id="@request.Id" class="text-dark">
                                                        <span class="material-symbols-outlined">
                                                            quick_reference_all
                                                        </span>
                                                    </a>
                                                </td>
                                                <td>@request.AppUser.FullName</td>
                                                <td>@request.RequestType.RequestName</td>
                                                <td>@request.CreateDate</td>
                                                <td>@request.RequestAmount</td>
                                                <td>@request.Currency</td>
                                                <td>
                                                    <span class="material-symbols-outlined text-warning">
                                                        hourglass_top
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="approved" role="tabpanel" aria-labelledby="approved-tab">
                            <!-- Tüm Çalışanlar tablosu burada -->
                            <table class="table table-bordered table-striped table-hover mt-5 text-center">
                                <!-- Tabloyu burada doldurun -->
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Owner</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Currency</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        @if (request.ApprovalStatus == ApprovalStatus.Approved)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-action="AdvanceRequestDetails" asp-route-id="@request.Id" class="text-dark">
                                                        <span class="material-symbols-outlined">
                                                            quick_reference_all
                                                        </span>
                                                    </a>
                                                </td>
                                                <td>@request.AppUser.FullName</td>
                                                <td>@request.RequestType.RequestName</td>
                                                <td>@request.CreateDate</td>
                                                <td>@request.RequestAmount</td>
                                                <td>@request.Currency</td>
                                                <td>
                                                    <span class="material-symbols-outlined text-success">
                                                        check_circle
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="refused" role="tabpanel" aria-labelledby="refused-tab">
                            <!-- Tüm Çalışanlar tablosu burada -->
                            <table class="table table-bordered table-striped table-hover mt-5 text-center">
                                <!-- Tabloyu burada doldurun -->
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Owner</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                        <th>Amount</th>
                                        <th>Currency</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        @if (request.ApprovalStatus == ApprovalStatus.Declined)
                                        {
                                            <tr>
                                                <td>
                                                    <a asp-action="AdvanceRequestDetails" asp-route-id="@request.Id" class="text-dark">
                                                        <span class="material-symbols-outlined">
                                                            quick_reference_all
                                                        </span>
                                                    </a>
                                                </td>
                                                <td>@request.AppUser.FullName</td>
                                                <td>@request.RequestType.RequestName</td>
                                                <td>@request.CreateDate</td>
                                                <td>@request.RequestAmount</td>
                                                <td>@request.Currency</td>
                                                <td>
                                                    <span class="material-symbols-outlined text-danger">
                                                        cancel
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

